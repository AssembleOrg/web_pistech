---
import { Menu } from "lucide-astro";
---

<nav
    class="fixed top-0 w-full bg-white/95 backdrop-blur-sm border-b border-pistachio-100 z-50 transition-all duration-300"
>
    <div class="container-custom">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
            <a href="/" class="flex items-center">
                <img
                    src="/Logos Pistech/Logo-p-pistech-verde.png"
                    alt="Pistech Logo"
                    class="h-10 w-auto"
                />
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-8">
                <a
                    href="#inicio"
                    class="text-gray-700 hover:text-pistachio-600 transition-colors duration-300 font-medium"
                    >Inicio</a
                >
                <a
                    href="#servicios"
                    class="text-gray-700 hover:text-pistachio-600 transition-colors duration-300 font-medium"
                    >Servicios</a
                >
                <a
                    href="#proyectos"
                    class="text-gray-700 hover:text-pistachio-600 transition-colors duration-300 font-medium"
                    >Proyectos</a
                >
                <a
                    href="#equipo"
                    class="text-gray-700 hover:text-pistachio-600 transition-colors duration-300 font-medium"
                    >Equipo</a
                >
                <a
                    href="#contacto"
                    class="text-gray-700 hover:text-pistachio-600 transition-colors duration-300 font-medium"
                    >Contacto</a
                >
            </div>

            <!-- CTA Button -->
            <div class="hidden md:block">
                <a
                    href="#contacto"
                    class="btn-primary"
                    >Comenzar Proyecto</a
                >
            </div>

            <!-- Mobile menu button -->
            <button
                id="mobile-menu-button"
                class="md:hidden p-2 rounded-lg hover:bg-pistachio-50 transition-colors duration-300"
            >
                <Menu class="w-6 h-6 text-gray-700" />
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="md:hidden hidden">
            <div
                class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-pistachio-100"
            >
                <a
                    href="#inicio"
                    class="block px-3 py-2 text-gray-700 hover:text-pistachio-600 hover:bg-pistachio-50 rounded-lg transition-colors duration-300 font-medium"
                    >Inicio</a
                >
                <a
                    href="#servicios"
                    class="block px-3 py-2 text-gray-700 hover:text-pistachio-600 hover:bg-pistachio-50 rounded-lg transition-colors duration-300 font-medium"
                    >Servicios</a
                >
                <a
                    href="#proyectos"
                    class="block px-3 py-2 text-gray-700 hover:text-pistachio-600 hover:bg-pistachio-50 rounded-lg transition-colors duration-300 font-medium"
                    >Proyectos</a
                >
                <a
                    href="#equipo"
                    class="block px-3 py-2 text-gray-700 hover:text-pistachio-600 hover:bg-pistachio-50 rounded-lg transition-colors duration-300 font-medium"
                    >Equipo</a
                >
                <a
                    href="#contacto"
                    class="block px-3 py-2 text-gray-700 hover:text-pistachio-600 hover:bg-pistachio-50 rounded-lg transition-colors duration-300 font-medium"
                    >Contacto</a
                >
                <div class="pt-4">
                    <a
                        href="#contacto"
                        class="btn-primary w-full text-center block"
                        >Comenzar Proyecto</a
                    >
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIcon = mobileMenuButton?.querySelector("svg");

    mobileMenuButton?.addEventListener("click", () => {
        const isHidden = mobileMenu?.classList.contains("hidden");

        if (isHidden) {
            mobileMenu?.classList.remove("hidden");
            menuIcon?.classList.add("hidden");
            const xIcon = document.createElement("div");
            xIcon.innerHTML = `<svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>`;
            mobileMenuButton.appendChild(xIcon);
        } else {
            mobileMenu?.classList.add("hidden");
            menuIcon?.classList.remove("hidden");
            const xIcon = mobileMenuButton.querySelector("div");
            xIcon?.remove();
        }
    });

    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
            menuIcon?.classList.remove("hidden");
            const xIcon = mobileMenuButton?.querySelector("div");
            xIcon?.remove();
        });
    });
</script>

