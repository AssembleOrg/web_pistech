---
// Premium header component inspired by elcielo.digital
// Glassmorphism design with dynamic background
---

<header id="header-premium" class="fixed top-0 left-0 right-0 z-50">
  <div class="header-glass-bg"></div>

  <nav class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">

      <!-- Logo Section with enhanced branding -->
      <div class="flex items-center group">
        <a href="/" class="flex items-center space-x-3 transition-all duration-300 group-hover:scale-105">
          <!-- Enhanced logo with gradient -->
          <div class="logo-container">
            <div class="w-10 h-10 bg-gradient-to-br from-pistech-primary to-pistech-accent rounded-xl flex items-center justify-center shadow-lg shadow-pistech-primary/30">
              <span class="text-pistech-dark font-bold text-xl">P</span>
            </div>
          </div>

          <!-- Company name with gradient text -->
          <div class="flex flex-col">
            <span class="text-2xl font-bold bg-gradient-to-r from-white to-pistech-light bg-clip-text text-transparent">
              PISTECH
            </span>
            <span class="text-xs text-pistech-light/60 font-medium tracking-widest uppercase">
              Software Factory
            </span>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation with hover effects -->
      <div class="hidden lg:flex items-center space-x-8">
        <nav class="flex items-center space-x-6">
          <a href="#inicio" class="nav-link">
            <span>Inicio</span>
            <div class="nav-indicator"></div>
          </a>
          <a href="#servicios" class="nav-link">
            <span>Servicios</span>
            <div class="nav-indicator"></div>
          </a>
          <a href="#proceso" class="nav-link">
            <span>Proceso</span>
            <div class="nav-indicator"></div>
          </a>
          <a href="#portfolio" class="nav-link">
            <span>Portfolio</span>
            <div class="nav-indicator"></div>
          </a>
          <a href="#contacto" class="nav-link">
            <span>Contacto</span>
            <div class="nav-indicator"></div>
          </a>
        </nav>

        <!-- Premium CTA Button -->
        <a href="#contacto" class="cta-premium">
          <span class="cta-text">Comenzar Proyecto</span>
          <div class="cta-bg"></div>
          <svg class="w-4 h-4 cta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>

      <!-- Mobile menu button with animation -->
      <button class="mobile-menu-btn lg:hidden">
        <div class="hamburger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </button>

    </div>
  </nav>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="mobile-menu">
    <div class="mobile-menu-content">
      <nav class="mobile-nav">
        <a href="#inicio" class="mobile-nav-link">Inicio</a>
        <a href="#servicios" class="mobile-nav-link">Servicios</a>
        <a href="#proceso" class="mobile-nav-link">Proceso</a>
        <a href="#portfolio" class="mobile-nav-link">Portfolio</a>
        <a href="#contacto" class="mobile-nav-link">Contacto</a>
      </nav>
      <div class="mobile-cta">
        <a href="#contacto" class="cta-premium">
          <span class="cta-text">Comenzar Proyecto</span>
          <div class="cta-bg"></div>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  /* Glassmorphism Header Background */
  #header-premium {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .header-glass-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(17, 18, 20, 0.95) 0%,
      rgba(28, 29, 32, 0.9) 50%,
      rgba(17, 18, 20, 0.95) 100%
    );
    border-bottom: 1px solid rgba(147, 197, 114, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  /* Logo animations */
  .logo-container {
    position: relative;
  }

  .logo-container::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(45deg, #93C572, #A3E635, #93C572);
    border-radius: 14px;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .group:hover .logo-container::before {
    opacity: 1;
    animation: pulse-glow 2s infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { transform: scale(1); opacity: 0.7; }
    50% { transform: scale(1.05); opacity: 1; }
  }

  /* Navigation Links */
  .nav-link {
    position: relative;
    color: #E4E4E7;
    font-weight: 500;
    font-size: 15px;
    text-decoration: none;
    padding: 8px 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .nav-link:hover {
    color: #93C572;
    transform: translateY(-1px);
  }

  .nav-indicator {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #93C572, #A3E635);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 1px;
  }

  .nav-link:hover .nav-indicator {
    width: 100%;
  }

  /* Premium CTA Button */
  .cta-premium {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    color: #111214;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(163, 230, 53, 0.3);
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #A3E635 0%, #93C572 100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cta-premium:hover .cta-bg {
    transform: scale(1.05);
  }

  .cta-premium:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(163, 230, 53, 0.4);
  }

  .cta-text,
  .cta-icon {
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease;
  }

  .cta-premium:hover .cta-icon {
    transform: translateX(4px);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    padding: 8px;
    border: none;
    background: none;
    cursor: pointer;
  }

  .hamburger {
    width: 24px;
    height: 18px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hamburger span {
    width: 100%;
    height: 2px;
    background: #E4E4E7;
    border-radius: 1px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-menu-btn:hover .hamburger span {
    background: #93C572;
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(17, 18, 20, 0.98);
    backdrop-filter: blur(20px);
    transform: translateY(-100%);
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .mobile-menu.active {
    transform: translateY(0);
    opacity: 1;
    pointer-events: all;
  }

  .mobile-menu-content {
    padding: 40px 20px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 40px;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 20px;
    text-align: center;
  }

  .mobile-nav-link {
    color: #E4E4E7;
    font-size: 24px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 10px;
  }

  .mobile-nav-link:hover {
    color: #93C572;
    transform: scale(1.05);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .nav-link {
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    nav {
      padding: 0 16px;
    }

    .header-glass-bg {
      backdrop-filter: blur(15px);
    }
  }

  /* Scroll Effect */
  .header-scrolled {
    background: rgba(17, 18, 20, 0.98);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }

  .header-scrolled .header-glass-bg {
    background: rgba(17, 18, 20, 0.98);
    border-bottom-color: rgba(147, 197, 114, 0.3);
  }
</style>

<script>
  // Mobile menu functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const header = document.getElementById('header-premium');

    // Mobile menu toggle
    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('active');
    });

    // Close mobile menu when clicking on a link
    document.querySelectorAll('.mobile-nav-link').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.remove('active');
      });
    });

    // Header scroll effect
    let lastScrollY = window.scrollY;

    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;

      if (currentScrollY > 100) {
        header?.classList.add('header-scrolled');
      } else {
        header?.classList.remove('header-scrolled');
      }

      lastScrollY = currentScrollY;
    });

    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>