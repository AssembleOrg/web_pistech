---
// Modern Hero component inspired by reference designs
export interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
}

const {
  title,
  subtitle = "Transformamos procesos manuales y problemas complejos en soluciones digitales simples y a medida.",
  badge = "Software Factory #1 en Argentina"
} = Astro.props;
---

<section class="hero-modern relative min-h-screen flex items-center overflow-hidden">

  <!-- Background with geometric shapes (inspired by reference) -->
  <div class="absolute inset-0 bg-gradient-to-br from-pistech-dark via-pistech-secondary to-pistech-dark"></div>

  <!-- Geometric shapes container -->
  <div class="shapes-container absolute inset-0 overflow-hidden">
    <div class="geometric-shape shape-primary"></div>
    <div class="geometric-shape shape-accent"></div>
    <div class="geometric-shape shape-outline"></div>
    <div class="geometric-shape shape-small"></div>
  </div>

  <!-- Main content container -->
  <div class="container-custom mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[80vh]">

      <!-- Left side: Content -->
      <div class="content-side space-y-8">

        <!-- Badge -->
        <div class="inline-flex items-center">
          <div class="service-badge">
            <span class="badge-dot">●</span>
            <span class="badge-text">{badge}</span>
            <div class="badge-glow"></div>
          </div>
        </div>

        <!-- Main title -->
        <h1 class="hero-title">
          <span class="title-part-1">Hacemos que la</span>
          <span class="title-highlight">tecnología</span>
          <span class="title-part-3">trabaje para vos</span>
        </h1>

        <!-- Subtitle -->
        <p class="hero-subtitle">
          {subtitle}
        </p>

        <!-- CTA Buttons -->
        <div class="hero-cta-group">
          <a href="#contacto" class="cta-primary group">
            <span class="cta-content">
              <span class="cta-text">¡Comenzar Proyecto!</span>
              <svg class="cta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
            <div class="cta-bg"></div>
          </a>

          <a href="#servicios" class="cta-secondary">
            <span class="cta-text">Ver Servicios</span>
            <div class="cta-border"></div>
          </a>
        </div>

        <!-- Social proof stats -->
        <div class="stats-grid">
          <div class="stat-item">
            <div class="stat-number">50+</div>
            <div class="stat-label">Proyectos</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">100%</div>
            <div class="stat-label">Satisfacción</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Soporte</div>
          </div>
        </div>

      </div>

      <!-- Right side: Professional illustration -->
      <div class="illustration-side relative">
        <div class="person-showcase">

          <!-- Professional person frame -->
          <div class="person-frame">
            <div class="person-content">
              <div class="person-avatar">
                <svg class="person-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div class="tech-device">
                <svg class="device-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
          </div>

          <!-- Floating tech elements -->
          <div class="floating-tech">
            <div class="tech-element tech-1">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <div class="tech-element tech-2">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="tech-element tech-3">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator">
    <div class="scroll-text">Scroll para explorar</div>
    <div class="scroll-arrow">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>

</section>

<style>
  /* Modern Hero Styles - Inspired by reference designs */
  .hero-modern {
    min-height: 100vh;
    position: relative;
    background: linear-gradient(135deg, #111214 0%, #1C1D20 50%, #111214 100%);
  }

  /* Geometric shapes (inspired by reference) */
  .shapes-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .geometric-shape {
    position: absolute;
    border-radius: 20% 80% 30% 70% / 50% 60% 40% 50%;
    opacity: 0.6;
    animation: float-shape 10s ease-in-out infinite;
  }

  .shape-primary {
    background: linear-gradient(135deg, #93C572, rgba(147, 197, 114, 0.3));
    width: 350px;
    height: 450px;
    top: 5%;
    right: 0%;
    animation-delay: 0s;
  }

  .shape-accent {
    background: linear-gradient(45deg, #A3E635, rgba(163, 230, 53, 0.2));
    width: 250px;
    height: 350px;
    bottom: 10%;
    left: -10%;
    animation-delay: 2s;
  }

  .shape-outline {
    background: none;
    border: 3px solid rgba(147, 197, 114, 0.3);
    width: 200px;
    height: 280px;
    top: 45%;
    left: 15%;
    animation-delay: 4s;
  }

  .shape-small {
    background: linear-gradient(225deg, #93C572, rgba(147, 197, 114, 0.4));
    width: 150px;
    height: 200px;
    top: 20%;
    right: 20%;
    animation-delay: 1s;
  }

  @keyframes float-shape {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-30px) rotate(10deg); }
  }

  /* Content animations */
  .content-side {
    animation: slide-in-left 0.8s ease-out forwards;
    opacity: 0;
    transform: translateX(-50px);
  }

  @keyframes slide-in-left {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .illustration-side {
    animation: slide-in-right 0.8s ease-out 0.3s forwards;
    opacity: 0;
    transform: translateX(50px);
  }

  @keyframes slide-in-right {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Badge styles */
  .service-badge {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(147, 197, 114, 0.1);
    border: 1px solid rgba(147, 197, 114, 0.3);
    border-radius: 30px;
    backdrop-filter: blur(15px);
    overflow: hidden;
  }

  .badge-dot {
    color: #A3E635;
    font-size: 12px;
    animation: pulse-dot 2s infinite;
  }

  .badge-text {
    color: #93C572;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .badge-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(45deg, transparent, rgba(147, 197, 114, 0.5), transparent);
    border-radius: 30px;
    opacity: 0;
    animation: badge-glow 4s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.2); }
  }

  @keyframes badge-glow {
    0%, 100% { opacity: 0; transform: rotate(0deg); }
    50% { opacity: 1; transform: rotate(180deg); }
  }

  /* Title styles */
  .hero-title {
    font-size: clamp(2.5rem, 7vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: #E4E4E7;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.1em;
  }

  .title-part-1,
  .title-part-3 {
    color: #E4E4E7;
  }

  .title-highlight {
    background: linear-gradient(135deg, #93C572 0%, #A3E635 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 3s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { filter: hue-rotate(0deg); }
    50% { filter: hue-rotate(15deg); }
  }

  /* Subtitle styles */
  .hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.3rem);
    color: rgba(228, 228, 231, 0.85);
    line-height: 1.6;
    max-width: 500px;
    margin-bottom: 2rem;
  }

  /* CTA styles (inspired by reference yellow/green buttons) */
  .hero-cta-group {
    display: flex;
    flex-direction: column;
    sm:flex-direction: row;
    gap: 1rem;
    align-items: flex-start;
    margin-bottom: 3rem;
  }

  .cta-primary {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 16px 30px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    font-size: 16px;
    color: #111214;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 8px 25px rgba(163, 230, 53, 0.3);
  }

  .cta-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #A3E635 0%, #93C572 100%);
    transition: transform 0.3s ease;
  }

  .cta-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(163, 230, 53, 0.4);
  }

  .cta-primary:hover .cta-bg {
    transform: scale(1.05);
  }

  .cta-icon {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .cta-primary:hover .cta-icon {
    transform: translateX(5px);
  }

  .cta-secondary {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 30px;
    color: #E4E4E7;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .cta-border {
    position: absolute;
    inset: 0;
    border: 2px solid rgba(228, 228, 231, 0.3);
    border-radius: 50px;
    transition: border-color 0.3s ease;
  }

  .cta-secondary:hover .cta-border {
    border-color: #93C572;
  }

  .cta-secondary:hover {
    color: #93C572;
    transform: translateY(-2px);
  }

  /* Stats grid */
  .stats-grid {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: left;
  }

  .stat-number {
    font-size: 1.8rem;
    font-weight: 800;
    color: #93C572;
    line-height: 1;
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 14px;
    color: rgba(228, 228, 231, 0.7);
    font-weight: 500;
  }

  /* Person showcase (inspired by reference) */
  .person-showcase {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
  }

  .person-frame {
    position: relative;
    width: 300px;
    height: 350px;
    background: linear-gradient(135deg, rgba(228, 228, 231, 0.1), rgba(147, 197, 114, 0.05));
    border-radius: 25px;
    border: 1px solid rgba(147, 197, 114, 0.2);
    backdrop-filter: blur(20px);
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .person-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 2rem;
  }

  .person-avatar {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #93C572, #A3E635);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 25px rgba(147, 197, 114, 0.3);
  }

  .person-icon {
    width: 50px;
    height: 50px;
    color: #111214;
  }

  .tech-device {
    width: 140px;
    height: 90px;
    background: rgba(17, 18, 20, 0.9);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(147, 197, 114, 0.3);
    backdrop-filter: blur(10px);
  }

  .device-icon {
    width: 50px;
    height: 50px;
    color: #93C572;
  }

  /* Floating tech elements */
  .floating-tech {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .tech-element {
    position: absolute;
    width: 50px;
    height: 50px;
    background: rgba(147, 197, 114, 0.1);
    border: 1px solid rgba(147, 197, 114, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #93C572;
    backdrop-filter: blur(10px);
    animation: float-tech 8s ease-in-out infinite;
  }

  .tech-element svg {
    width: 24px;
    height: 24px;
  }

  .tech-1 {
    top: 15%;
    right: 15%;
    animation-delay: 0s;
  }

  .tech-2 {
    bottom: 25%;
    left: 10%;
    animation-delay: 2.5s;
  }

  .tech-3 {
    top: 55%;
    right: 5%;
    animation-delay: 5s;
  }

  @keyframes float-tech {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    50% { transform: translateY(-20px) rotate(180deg); opacity: 1; }
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    color: rgba(228, 228, 231, 0.6);
    animation: bounce 2s infinite;
    z-index: 20;
  }

  .scroll-text {
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
  }

  .scroll-arrow {
    width: 20px;
    height: 20px;
    margin: 0 auto;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
  }

  /* Responsive design */
  @media (max-width: 1024px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .hero-cta-group {
      justify-content: center;
    }

    .stats-grid {
      justify-content: center;
    }

    .person-frame {
      width: 250px;
      height: 300px;
    }

    .geometric-shape {
      opacity: 0.3;
    }
  }

  @media (max-width: 768px) {
    .hero-modern {
      min-height: 100vh;
      padding: 2rem 0;
    }

    .hero-cta-group {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .stats-grid {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .stat-item {
      text-align: center;
    }

    .person-frame {
      width: 220px;
      height: 260px;
    }

    .floating-tech {
      display: none;
    }

    .geometric-shape {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .person-showcase {
      min-height: 300px;
    }

    .stats-grid {
      margin-top: 2rem;
    }
  }
</style>